<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="build" name="Ruby-Sinatra Sample">
    <target name="clean">
		<delete file="webApp.zip" />
    </target>
    <target name="build" depends="build-zip"/>
    <target name="cleanall" depends="clean"/>
    <target name="build-zip" depends="clean">
    	<zip basedir="." destfile="output/webApp.zip" excludes="output/webApp.zip,build.xml" />
    </target>
</project>
